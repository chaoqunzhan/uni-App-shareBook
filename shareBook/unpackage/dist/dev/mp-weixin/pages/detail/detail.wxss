
.swiper{
	width:100%;
	height:600rpx;
	background: #f0f0f0;
}
.swiper ._img{
	width:100%;
	height:100%;
}
.describe-name-value{
	width:670rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	margin:40rpx;
	font-size:40rpx;
	font-weight:bold;
}
.describe-name{
	-webkit-box-flex:1;
	-webkit-flex:1;
	    -ms-flex:1;
	        flex:1;
	overflow: hidden;
	white-space:nowrap;
}
.describe-value{
	width:100rpx;
	color:red;
	margin-left:10rpx;
}
.describe-sort-age{
	width:670rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	margin:40rpx;
	font-size:40rpx;
}
.describe-sort,.describe-age{
	font-size:28rpx;
	color:#808080;
	line-height:40rpx;
	/* border:1px solid #808080; */
	border-radius:24rpx;
	margin-right:30rpx;
	padding:0 10rpx;
	background:#39CFFC;
	color:#fff;
}
.describe-address{
	margin:40rpx;
	font-size:28rpx;
	color:#808080;
	line-height:50rpx;
/* 	border:1px solid #808080; */
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
}
.describe-address ._img{
	width:50rpx;
	margin-right:30rpx;
}
.describe-text{
	margin:40rpx;
	color:#808080;
	font-size:28rpx;
}
.bottom-bar{
	width:100%;
	height:100rpx;
	/* background:#FF0000; */
	/* border-top:1px solid #808080; */
	-webkit-box-shadow:0 0 5px #808080;
	        box-shadow:0 0 5px #808080;
	position:fixed;
	left:0;
	bottom:0;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	line-height:100rpx;
}
.bottom-bar-like,.bottom-bar-share{
	width:135rpx;
}
.bottom-bar ._img{
	width:50rpx;
	margin:auto 40rpx;
}
.bottom-bar-call{
	width:300rpx;
	text-align:center;
	color:#fff;
	background:#39CFFC;
}

